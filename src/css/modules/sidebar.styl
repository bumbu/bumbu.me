.sidebar-trigger
  display none

.sidebar
  width $sidebarWidth
  margin-left - $sidebarWidth
  position fixed
  top 0
  bottom 0
  left $sidebarWidth
  z-index $zIndexSidebar
  background $whiteGray

.sidebar-primary
  position absolute
  trbl 0 auto 0 0
  width $firstSidebarWidth
  border-right 1px solid $gray

  a.logo, a.icon
    display block
    color $gray
    text-decoration none
    padding 8px 0
    font-size 27px
    display inline-block
    width 100%
    text-align center
    -webkit-tap-highlight-color: rgba(0, 0, 0, 0)

    &:hover
      color $blue

  a.logo
    height 45px - 16px

  .menu
    li
      height $firstSidebarWidth
      display block
      &.current_page_item,
      &.current_page_item:hover,
      &.active,
      &.active:hover
        background $grayLighter
        border-top 1px solid $gray
        border-bottom 1px solid $gray
        margin -1px

        a
          color $gray

.sidebar-secondary
  position absolute
  trbl 0 0 0 $firstSidebarWidth + 1
  overflow auto
  font-family $headingsFontFamily
  background $grayLighter
  border-right 1px solid $gray

  .item
    display block
    padding: 9px 14px
    margin-top 5px
    cursor: pointer;
    font-size $fontSizeSidebar - 3px
    line-height 1.3

    &.header
      margin 0 14px
      padding 0
      border-bottom: 1px solid $gray

      h4
        margin: 0;
        padding: 0 10px 0 0;
        height: $firstSidebarWidth;
        line-height: $firstSidebarWidth;
        font-weight: normal;
        font-size $fontSizeSidebar
        text-decoration: none;
        color: $grayDarker;

      &:hover
        background none

    &.active, &.active:hover
      cursor: default;
      background none

      .title
        font-weight bold
        color $black

    &:hover
      background: $grayLight;

      .title
        color: $grayDark

    .title
      color: $gray;
      text-decoration: none;


@media (max-width: 767px)
  body.sidebar-open
    overflow hidden

    .sidebar-trigger
      right 0px
      top 0px
      padding 9px 7px

      .lines
        background transparent
        top 19px

        &:before,
        &:after
          transform-origin: 50% 50%
          top:0

        &:before
          transform: rotate3d(0,0,1,45deg)

        &:after
          transform: rotate3d(0,0,1,-45deg)

    .sidebar
      margin-left 0

    .body-container
      position absolute
      top 0
      left 0
      right 0
      bottom 0
      overflow hidden

  .sidebar-trigger
    display block
    position absolute
    top 0
    right -40px
    height: 26px;
    width: 34px;
    z-index $zIndexSidebar + 1
    transition all 0.3s ease
    padding 3px
    -webkit-tap-highlight-color: rgba(0, 0, 0, 0)

    .lines,
    .lines:before,
    .lines:after
      position absolute
      top 10px
      left 2px
      display block
      size 30px 5px
      background $gray
      border-radius 2px
      transition all 0.3s ease

    .lines:before,
    .lines:after
      content ''
      left 0

    .lines:before
      top -8px

    .lines:after
      top 8px

  .sidebar
    left 0
    width 100%
    margin-left -100%
    transition margin 0.5s ease
