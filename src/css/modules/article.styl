.body-container .post,
.body-container .page,
.wp-editor // wordpress editor

  h1.post-title, h1.post-title:first-child
    font-family: $headingsFontFamily;
    font-weight: $headingsFontWeight;
    font-size: $fontSizeH1;
    line-height: 1.2;
    padding: 0;
    margin-top: 15px;
    margin-bottom: 5px;
    border: 0;

    a
      text-decoration: none;
      color: $black;

  p
    margin: 15px 0;

  ul
    padding-left: 33px;
    list-style: none;
    margin: 0;
    padding: 0;

    li
      padding: 2px 0 0 20px;
      position: relative;

      &:first-child
        margin-top: 0;
      &:before
        content: '';
        display: block;
        position: absolute;
        top: 9px;
        left: 5px;
        width: 8px;
        height: 8px;
        border: 1px solid #adadad;
        border-top-color: #bebebe;
        border-bottom-color: #adadad;
        box-sizing: border-box;
        border-radius: 50%;
        background #fcfdfe
        // linear-gradient(top, #fcfdfe, #e4e5e6) // compiles breaks

  ol
    padding-left: 33px;

  h1, h2, h3, h4
    font-family $headingsFontFamily
    font-weight $headingsFontWeight
    line-height 1.2

    &:first-child
      padding-top 0

  h1
    font-size $fontSizeH1
    margin ($fontSizeH1 * 1.2) 0 ($fontSizeH1 * 0.7)

  h2
    font-size $fontSizeH2
    margin ($fontSizeH2 * 1.2) 0 ($fontSizeH2 * 0.7)

  h3
    font-size $fontSizeH3
    margin ($fontSizeH3 * 1.2) 0 ($fontSizeH3 * 0.7)

  h4
    font-size $fontSizeH4
    margin ($fontSizeH4 * 1.2) 0 ($fontSizeH4 * 0.7)

  blockquote
    margin 13px 0
    padding: 0 0 0 17px;
    border-left: 3px solid $blue;
    font-style: italic;

  code
    color $redDark
    border 1px solid #e1e1e8
    background #f7f7f9
    border-radius 3px
    font-family $codeFontFamily
    font-size $codeFontSize - 1px
    padding 1px 2px


  .prettyprint
    font-size: $codeFontSize
    font-family $codeFontFamily
    margin 6px 0 12px
    padding 0 6px 2px
    overflow auto

    &.linenums
      padding 0

    ol
      padding-left: 6px

    code
      font-size: $codeFontSize
      border 0
      background none
      padding 0

  p + .prettyprint
    margin-top: -9px;

  .prettyprint + p
    margin-top: 24px;

  em
    font-style italic
